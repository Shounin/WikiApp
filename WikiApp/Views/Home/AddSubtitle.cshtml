@{
    ViewBag.Title = "Bæta við skjátexta";
}

<h2>@ViewBag.Title</h2>

<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css">

<script type="text/javascript" src="/Scripts/tabScript.js"></script>
