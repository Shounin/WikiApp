@model WikiApp.Models.View_Models.SubtitlesVM
@{
    ViewBag.Title = "Tyding.is";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@ViewBag.Title</h2>

<script type="text/javascript" src="/Scripts/tabScript.js"></script>
<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css">

<!--Search takkinn-->

<div class="jumbotron">
<!--
    <form class="form-search">
        <input type="text" class="input-medium-search-query">
        <button type="submit" class="btn-primary">Leita</button>
    </form>
-->

    @using (Html.BeginForm("Search", "Home", @FormMethod.Get))
    {
        <p>
            @Html.TextBox("SearchString", null, new { @class = "input-medium-search-query", @type = "text", @placeholder = "Sláðu inn leitarorð" })
            <input type="submit" value="Leita" class="btn btn-primary" /> 
            @Html.ActionLink("Ítarleg leit", "Search", "Home", null, new { @class = "btn btn-info" })
        </p>
    }
    
</div>


<div class="row">
    <div class="col-lg-12">
        <ul id="tabs">
            <li><a href="#top10Movies">Vinsælustu Myndir</a></li>
            <li><a href="#newestMovies">Nýjustu Myndir</a></li>
            <li><a href="#top10Shows">Vinsælustu Þættir</a></li>
            <li><a href="#newestShows">Nýjustu Þættir</a></li>
        </ul>

        <div class="tabContent" id="top10Movies">
            <h3>Vinsælustu Myndirnar</h3>
            <ul>
                @foreach (var item in @Model.PopularMovies)
                {
                    <li>@Html.ActionLink(item.name, "View3", new { id = item.ID }) &nbsp;&nbsp;&nbsp; @item.dateAdded &nbsp;&nbsp;&nbsp; @item.category</li>
                }
            </ul>
        </div>

        <div class="tabContent" id="newestMovies">
            <h3>Nýjustu Myndir</h3>
            <ul>
                @foreach (var item in @Model.NewestMovies)
                { 
                    <li>@Html.ActionLink(item.name, "View3", new { id = item.ID }) &nbsp;&nbsp;&nbsp; @item.dateAdded &nbsp;&nbsp;&nbsp; @item.category</li>
                }
            </ul>
            </div>

        <div class="tabContent" id="top10Shows">
            <h3>Vinsælustu Þættirnir</h3>
            <ul>
            @foreach (var item in @Model.PopularTV)
            {
                <li>@Html.ActionLink(item.name, "SubtitleView", new { id = item.ID }) &nbsp;&nbsp;&nbsp; @item.dateAdded &nbsp;&nbsp;&nbsp; @item.category</li>
            }
            </ul>
        </div>

        <div class="tabContent" id="newestShows">
            <h3>Nýjustu Þættir</h3>
            <ul>
                @foreach (var item in @Model.NewestTV)
                {
                    <li>@Html.ActionLink(item.name, "SubtitleView", new { id = item.ID }) &nbsp;&nbsp;&nbsp; @item.dateAdded &nbsp;&nbsp;&nbsp; @item.category</li>
                }
            </ul>
        </div>
    </div>
</div>


